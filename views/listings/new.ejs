<% layout("/layouts/boilerplate") %>

<body>
    
    <div class="row mt-3">
        
        <div class="col-8 offset-2">
            <br/><br/>
            <h3>ADD NEW LISTING</h3>
    <form method="POST" action="/listings">
        <div class="mb-3">
            <belal for="title" class="form-lable" >Title</label>
            <input placeholder="Enter title" class="form-control" type="text" name="listing[title]" value="<%= listing.title %>">
        </div>
        
        <div class="mb-3">
            <belal for="description"  class="form-lable" >Description</label>
            <textarea name="listing[description]" class="form-control" value="<%=listing.description  %>"></textarea>
        </div>
        <div class="mb-3">
            <belal for="image"  class="form-lable" >Image</label>
            <input type="text" name="listing[image]" class="form-control" value="<%= listing.image %>">
        </div>   
        <div class="row">
            <div class="mb-3 col-md-4">
                <belal for="price"  class="form-lable" >Price</label>
                <input placeholder="1200" type="number" name="listing[price]" class="form-control" value="<%= listing.price %>">
            </div>
            <div class="mb-3 col-8">
                <belal for="country"  class="form-lable" >Country</label>
                <input placeholder="India" class="form-control" type="text"  name="listing[country]" value="<%= listing.country %>"></div>
            
        </div>
        <div class="mb-3">
            <belal for="location"  class="form-lable" >Location</label>
            <input placeholder="Parbhani,Maharashtra" class="form-control" type="text" name="listing[location]"   value ="<%= listing.location %>">
        </div>
        
            <button class="btn btn-dark add-btn mb-3">ADD</button>
    </form>
</div>
</div>
</body>

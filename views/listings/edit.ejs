<% layout("/layouts/boilerplate") %>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <br/><br/>
    <h3>Edit Your Listing </h3>
    <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" novalidate class="needs-validation">
        <div class="mb-3">
            <belal for="title"  class="form-lable" >Title</label>
            <input class="form-control" type="text" name="listing[title]" value="<%= listing.title %>" required/>
            <div class="valid-feedback">
                Looks good!
              </div>
        </div>
        
        <div class="mb-3">
            <belal for="description"  class="form-lable" >Description</label>
            <textarea name="listing[description]" class="form-control" value="<%=listing.description  %>" required></textarea>
            <div class="invalid-feedback">
                Please enter a short description.
              </div>
        </div>
        <div class="mb-3">
            <belal for="image"  class="form-lable" >Image</label>
            <input type="text" name="listing[image]" class="form-control" value="<%= listing.image %>" required/>
            <div class="invalid-feedback">
                image should be valid
              </div>
        </div>   
        <div class="row">
            <div class="mb-3 col-md-4">
                <belal for="price"  class="form-lable" >Price</label>
                <input type="number" name="listing[price]" class="form-control" value="<%= listing.price %>" required/>
                <div class="invalid-feedback">
                    Price should be valid
                  </div>
            </div>
            <div class="mb-3 col-8">
                <belal for="country"  class="form-lable" >Country</label>
                <input class="form-control" type="text"  name="listing[country]" value="<%= listing.country %>" required/></div>
                <div class="invalid-feedback">
                    Country should be valid
                  </div>
        </div>
        <div class="mb-3">
            <belal for="location" class="form-lable" >Location</label>
            <input  class="form-control" type="text" name="listing[location]"   value ="<%= listing.location %>" required />
            <div class="invalid-feedback">
                Location should be valid
              </div>
        </div>
        
            <button class="btn btn-dark edit-btn mb-3">Edit</button>
    </form>
</div>
</div>
<script src="/js/script.js"></script>
</body>
<% layout("/layouts/boilerplate") %>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <br/><br/>
    <h3>Edit Your Listing </h3>
    <form method="POST" action="/listings/<%= listing._id %>?_method=PUT">
        <div class="mb-3">
            <belal for="title"  class="form-lable" >Title</label>
            <input class="form-control" type="text" name="listing[title]" value="<%= listing.title %>">
        </div>
        
        <div class="mb-3">
            <belal for="description"  class="form-lable" >Description</label>
            <textarea name="listing[description]" class="form-control" value="<%=listing.description  %>"></textarea>
        </div>
        <div class="mb-3">
            <belal for="image"  class="form-lable" >Image</label>
            <input type="text" name="listing[image]" class="form-control" value="<%= listing.image %>">
        </div>   
        <div class="row">
            <div class="mb-3 col-md-4">
                <belal for="price"  class="form-lable" >Price</label>
                <input type="number" name="listing[price]" class="form-control" value="<%= listing.price %>">
            </div>
            <div class="mb-3 col-8">
                <belal for="country"  class="form-lable" >Country</label>
                <input class="form-control" type="text"  name="listing[country]" value="<%= listing.country %>"></div>
            
        </div>
        <div class="mb-3">
            <belal for="location" class="form-lable" >Location</label>
            <input  class="form-control" type="text" name="listing[location]"   value ="<%= listing.location %>">
        </div>
        
            <button class="btn btn-dark edit-btn mb-3">Edit</button>
    </form>
</div>
</div>
</body>